<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_navy"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:text="@string/app_name"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/color_white"
        android:textAlignment="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="25dp"
        android:background="@color/color_white"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/item_yhk"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="12.0dip" >
            <ImageView
                android:id="@+id/iv_item1"
                android:layout_width="58.0dip"
                android:layout_height="58.0dip"
                android:src="@drawable/icon_action_sk"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/app_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_item1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5.0dip"
                android:maxLines="1"
                android:textColor="@color/color_white"
                android:text="刷卡支付"
                android:textSize="14.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_zfb"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="12.0dip" >
            <ImageView
                android:id="@+id/iv_item2"
                android:layout_width="58.0dip"
                android:layout_height="58.0dip"
                android:src="@drawable/icon_action_zfb"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/app_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_item2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5.0dip"
                android:maxLines="1"
                android:textColor="@color/color_white"
                android:text="支付宝支付"
                android:textSize="14.0sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/item_wx"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="12.0dip" >
            <ImageView
                android:id="@+id/iv_item4"
                android:layout_width="58.0dip"
                android:layout_height="58.0dip"
                android:src="@drawable/icon_action_wx"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/app_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_item4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5.0dip"
                android:maxLines="1"
                android:textColor="@color/color_white"
                android:text="微信支付"
                android:textSize="14.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_weixin"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="12.0dip" >

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
    </LinearLayout>
</LinearLayout>
